<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>Lightbourne Technologies</Authors>
    <Company>Lightbourne Technologies</Company>
    <Product>LightRate Client C#</Product>
    <Description>C# client for the Lightrate token management API</Description>
    <Copyright>Copyright Â© 2025 Lightbourne Technologies</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/lightbourne-technologies/lightrate-client-csharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/lightbourne-technologies/lightrate-client-csharp</RepositoryUrl>
    <Version>1.0.0</Version>
    <PackageTags>lightrate;rate-limiting;token-management;api-client;csharp;dotnet</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>LightRateClient</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>

</Project>
